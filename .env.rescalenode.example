# Output folder (will be deleted/recreated by sh/rescalenode-setup.sh)
RESCALENODE_FOLDER="./build/rescalenode"

# RPC auth users (written into node/auth.toml by docker service rpc-auth-toml)
USERNAME_ROOT="root"
PASSWORD_ROOT="change-me"
PERMISSIONS_ROOT="*:*"

USERNAME_ETH="eth"
PASSWORD_ETH="change-me"
PERMISSIONS_ETH="eth:*"

USERNAME_PUBLIC="public"
PASSWORD_PUBLIC="change-me"
PERMISSIONS_PUBLIC="eth:call"

# TLS generation (used by certificate-ca-signed / certificate-self-signed)
NODE_P12_PASSWORD="change-me"
CERT_SUBJECT="//CN=change-me"
CERT_EXTENSION="subjectAltName=DNS:change-me"

# External contract manifests (not included in this repo)
HASHMANAGER_MANIFEST_PATH="/absolute/path/to/HashManager.json"
DAG_HASHMANAGER_MANIFEST_PATH="/absolute/path/to/DagHashManager.json"

# Genesis template from this repo
GENESIS_TEMPLATE="./assets/genesis/qbft-freegas.json"
